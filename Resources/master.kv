#:kivy 1.7.2

# A container of rows for titlebar, tabs, button pages, and status bars
<MainWindow>:
	orientation: "vertical"
	size: root.width, root.height

# A container for columns of buttons
<SyPage>:
	orientation: "horizontal"
	size_hint: 1, 1

# A container that holds buttons
<SyFrame>:
	orientation: "tb-lr"
	spacing: 0,10
	padding: 10
	
<SyButton>:
	line_height: 1
	padding: 10,10
	spacing: 0, 10
	halign: 'center'
	valign: 'middle'
	size_hint: 1, None
	#size: self.height, 50
	size: self.texture_size
	text_size: self.width-20, None	
	
<TitleBar>:
	text: "Synthea Editing Fun"
	rgba: 1,0,0,1
	# Set the titlebar to be full width, but only take the height necessary
	size_hint: 1, None
